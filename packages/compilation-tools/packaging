set -e # exit immediately if a simple command exits with a non-zero status
#set -u # report the usage of uninitialized variables

# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package
#/sbin/swapoff -a

export HOME=/var/vcap

export LD_LIBRARY_PATH=`echo /var/vcap/packages/gcc/lib:/var/vcap/packages/gcc/lib64:${LD_LIBRARY_PATH:-''}|sed -e 's/^://' -e 's/:$//'`
export C_INCLUDE_PATH=`echo /var/vcap/packages/gcc/include:${C_INCLUDE_PATH:-''}|sed -e 's/^://' -e 's/:$//'`
export CC=/var/vcap/packages/gcc/bin/gcc
export CXX=/var/vcap/packages/gcc/bin/g++


for package_bin_dir in $(ls -d /var/vcap/packages/*/bin )
do
  export PATH=${package_bin_dir}:$PATH
done

# compiling cmake

for i in `find compilation-tools/ -type f -name 'cmake*.tar.gz' -print`
do
  ext_dir=`tar -tvf $i |tail -1|tr -s [:space:]| cut -d" " -f6 |cut -d"/" -f1`
  tar xf $i
  cd $ext_dir
  CC=/var/vcap/packages/gcc/bin/gcc CPPFLAGS="-I/var/vcap/packages/gcc/include" \
  LDFLAGS="-L/var/vcap/packages/gcc/lib -L/var/vcap/packages/gcc/lib64" ./configure --prefix=$BOSH_INSTALL_TARGET
  make && make install
  cd ..
done

# compiling pkg-config

for i in `find compilation-tools/ -type f -name 'pkg-config*.tar.gz' -print`
do
  ext_dir=`tar -tvf $i |tail -1|tr -s [:space:]| cut -d" " -f6 |cut -d"/" -f1`
  tar xf $i
  cd $ext_dir
  CC=/var/vcap/packages/gcc/bin/gcc CPPFLAGS="-I/var/vcap/packages/gcc/include" \
  LDFLAGS="-L/var/vcap/packages/gcc/lib -L/var/vcap/packages/gcc/lib64" ./configure --prefix=$BOSH_INSTALL_TARGET --with-internal-glib
  make && make install
  cd ..
done

# compiling expat (needed by git)
for i in `find compilation-tools/ -type f -name 'expat-*.tar.gz' -print`
do
  ext_dir=`tar -tvf $i |tail -1|tr -s [:space:]| cut -d" " -f6 |cut -d"/" -f1`
  tar xf $i
  cd $ext_dir/expat
  ./buildconf.sh
  CC=/var/vcap/packages/gcc/bin/gcc CPPFLAGS="-I/var/vcap/packages/gcc/include" \
  LDFLAGS="-L/var/vcap/packages/gcc/lib -L/var/vcap/packages/gcc/lib64" ./configure --prefix=$BOSH_INSTALL_TARGET --without-docbook --without-xmlwf
  make && make install
  cd ../..
done

#adding expat to paths
export LD_LIBRARY_PATH=/var/vcap/packages/compilation-tools/lib:/${LD_LIBRARY_PATH}
export C_INCLUDE_PATH=/var/vcap/packages/compilation-tools/include:${C_INCLUDE_PATH}
export LIBRARY_PATH=/var/vcap/packages/compilation-tools/lib

# compiling git

for i in `find compilation-tools/ -type f -name 'git-*.tar.gz' -print`
do
  ext_dir=`tar -tvf $i |tail -1|tr -s [:space:]| cut -d" " -f6 |cut -d"/" -f1`
  tar xf $i
  cd $ext_dir
  make prefix=$BOSH_INSTALL_TARGET && make install
  cd ..
done
