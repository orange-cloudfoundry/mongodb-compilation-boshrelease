set -e # exit immediately if a simple command exits with a non-zero status
#set -u # report the usage of uninitialized variables

# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package
#/sbin/swapoff -a

export HOME=/var/vcap

for package_bin_dir in $(ls -d /var/vcap/packages/*/bin ) $BOSH_INSTALL_TARGET/bin
do
  export PATH=${package_bin_dir}:$PATH
done

#adding expat to paths
export LD_LIBRARY_PATH=/var/vcap/packages/extra/lib:/${LD_LIBRARY_PATH}
export C_INCLUDE_PATH=/var/vcap/packages/extra/include:${C_INCLUDE_PATH}
export LIBRARY_PATH=/var/vcap/packages/extra/lib

# compiling git

for i in `find git/ -type f -name 'git-*.tar.gz' -print`
do
  ext_dir=`tar -tvf $i |tail -1|tr -s [:space:]| cut -d" " -f6 |cut -d"/" -f1`
  tar xf $i
  cd $ext_dir
  make && make prefix=$BOSH_INSTALL_TARGET install
  cd ..
done
